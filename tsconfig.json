{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@teak/shared": ["./packages/shared/src"],
      "@teak/shared/*": ["./packages/shared/src/*"],
      "@teak/convex": ["./packages/backend/convex/_generated/api"],
      "@teak/convex/*": ["./packages/backend/convex/*"]
    }
  },
  "references": [
    { "path": "./packages/shared" },
    { "path": "./packages/backend/convex" }
  ],
  "files": [],
  "exclude": ["node_modules"]
}