{
  "name": "teak-extension",
  "displayName": "Teak Chrome Extension",
  "version": "0.0.1",
  "private": true,
  "description": "Teak is a streamlined personal knowledge hub designed to help creative minds effortlessly collect, remember, and rediscover their most important ideas and inspirations.",
  "author": "Praveen Juge (hello@praveenjuge.com)",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "clean": "rm -rf build .plasmo node_modules",
    "install:clean": "npm run clean && npm install"
  },
  "dependencies": {
    "@clerk/chrome-extension": "^2.5.21",
    "convex": "^1.25.4",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "@teak/convex": "workspace:*"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.6.2",
    "@types/chrome": "0.1.4",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.16",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "tailwindcss": "3.4.1",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*",
      "http://localhost:3000/*"
    ],
    "permissions": [
      "storage",
      "cookies"
    ]
  }
}