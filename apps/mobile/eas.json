{
  "cli": {
    "version": ">= 16.18.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "simulator": true
      },
      "node": "22.0.0"
    },
    "preview": {
      "distribution": "internal",
      "node": "22.0.0"
    },
    "production": {
      "autoIncrement": true,
      "node": "22.0.0",
      "env": {
        "SKIP_SIMPLE_GIT_HOOKS": "1"
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "metadataPath": "./store.config.json"
      }
    }
  }
}
