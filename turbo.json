{
  "$schema": "https://turborepo.dev/schema.v2.json",
  "globalEnv": ["NODE_ENV", "VERCEL_ENV"],
  "globalPassThroughEnv": ["CI", "GITHUB_ACTIONS"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", ".output/**"],
      "env": [
        "NEXT_PUBLIC_*",
        "CONVEX_*",
        "EXPO_PUBLIC_*",
        "SENTRY_*",
        "POLAR_*"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "//#check": {},
    "//#fix": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^transit"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^transit"],
      "outputs": ["coverage/**"],
      "env": ["CLAUDECODE", "AGENT"]
    },
    "transit": {
      "dependsOn": ["^transit"]
    },
    "typecheck": {
      "dependsOn": ["^transit"],
      "outputs": []
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    }
  }
}
