{
  "name": "teak",
  "version": "0.0.1",
  "private": true,
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --filter=@teak/web --filter=@teak/convex",
    "dev:all": "turbo run dev",
    "dev:convex": "turbo run dev --filter=@teak/convex",
    "dev:docs": "turbo run dev --filter=@teak/docs",
    "dev:extension": "turbo run dev --filter=@teak/extension --filter=@teak/convex",
    "dev:mobile": "turbo run dev --filter=@teak/mobile --filter=@teak/convex",
    "dev:web": "turbo run dev --filter=@teak/web --filter=@teak/convex",
    "lint": "turbo run lint",
    "pre-commit": "lint-staged && turbo run typecheck lint build --affected",
    "prepare": "simple-git-hooks || exit 0",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "check": "ultracite check",
    "fix": "ultracite fix"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run pre-commit"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,md,mdx}": [
      "bun x ultracite fix"
    ]
  },
  "overrides": {
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.12",
    "lint-staged": "^16.2.7",
    "simple-git-hooks": "^2.11.1",
    "turbo": "^2.8.1",
    "ultracite": "7.1.1"
  }
}
