{
  "name": "teak-monorepo",
  "version": "0.0.1",
  "workspaces": [
    "apps/web",
    "packages/*"
  ],
  "scripts": {
    "build": "cd apps/web && bun run build",
    "predev": "cd packages/backend && bunx convex dev --until-success",
    "dev": "pkill -f 'port 3000' || true && concurrently \"bun run dev:backend\" \"bun run dev:frontend\"",
    "dev:backend": "cd packages/backend && bunx convex dev",
    "dev:frontend": "cd apps/web && bun dev",
    "dev:mobile": "cd apps/mobile && bun dev",
    "dev:extension": "cd apps/extension && bun dev",
    "dev:docs": "cd apps/docs && bun dev",
    "build:extension": "cd apps/extension && bun run build",
    "package:extension": "cd apps/extension && bun run package",
    "lint": "cd apps/web && bun run lint",
    "start": "cd apps/web && bun run start",
    "prepare": "husky"
  },
  "lint-staged": {
    "apps/web/**/*.{js,jsx,ts,tsx}": [
      "cd apps/web && bun run lint --fix"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  }
}