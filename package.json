{
  "name": "@teak/convex",
  "version": "0.0.1",
  "main": "convex/index.ts",
  "types": "convex/index.ts",
  "exports": {
    ".": "./convex/index.ts",
    "./shared": "./convex/shared/index.ts",
    "./shared/constants": "./convex/shared/constants.ts",
    "./shared/hooks/useCardActions": "./convex/shared/hooks/useCardActions.ts",
    "./shared/hooks/useFileUpload": "./convex/shared/hooks/useFileUpload.ts",
    "./shared/linkCategories": "./convex/shared/linkCategories.ts",
    "./shared/utils/colorUtils": "./convex/shared/utils/colorUtils.ts"
  },
  "scripts": {
    "build": "cd web && bun run build",
    "build:extension": "cd extension && bun run build",
    "build:docs": "cd docs && bun run build",
    "predev": "bunx convex dev --until-success",
    "pre-commit": "bunx lint-staged && bunx tsc --noEmit && bun run build && bun run build:docs && bun run build:extension",
    "dev": "pkill -f 'port 3000' || true && concurrently \"bun run dev:backend\" \"bun run dev:frontend\"",
    "dev:backend": "bunx convex dev",
    "dev:docs": "cd docs && bun dev",
    "dev:extension": "cd extension && bun dev",
    "dev:frontend": "cd web && bun dev",
    "dev:mobile": "cd mobile && bun dev",
    "lint": "cd web && bun run lint",
    "package:extension": "cd extension && bun run package",
    "prepare": "simple-git-hooks",
    "start": "cd web && bun run start",
    "test": "cd web && bun run test:e2e"
  },
  "lint-staged": {
    "web/**/*.{js,jsx,ts,tsx}": [
      "cd web && bun run lint --fix"
    ]
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.71",
    "@better-auth/expo": "1.3.34",
    "@cf-wasm/photon": "^0.2.2",
    "@convex-dev/better-auth": "^0.9.7",
    "@convex-dev/migrations": "^0.3.0",
    "@convex-dev/polar": "^0.7.1",
    "@convex-dev/resend": "^0.1.13",
    "@convex-dev/workflow": "^0.3.2",
    "@polar-sh/sdk": "^0.41.5",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.6",
    "ai": "^5.0.99",
    "better-auth": "1.3.34",
    "convex": "^1.29.3",
    "react": "^19.2.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.9.3"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run pre-commit"
  }
}
