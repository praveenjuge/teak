    "date-fns": "^4.1.0",
    "lucide-react": "^0.554.0",
    "next": "^16.0.2-canary.24",
    "next-themes": "^0.4.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-dropzone": "^14.3.8",
    "react-masonry-css": "^1.0.16",
    "sonner": "^2.0.7",
    "use-callback-ref": "^1.3.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
